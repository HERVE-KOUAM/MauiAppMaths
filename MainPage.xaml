<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMaths.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30.0"
            VerticalOptions="Center">

            <Image
                Source="maths.png"
                HeightRequest="200"
                HorizontalOptions="Center"
             />

            <Label
                Text="Tapez votre expression mathématique "
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry
                x:Name="exprEntry"
                WidthRequest="200"
                FontSize="18" />

            <Label
                x:Name="resLabel"
                Text="TVotre résultat ? "
                FontSize="18"
                HorizontalOptions="Center"/>

            <Button
                x:Name="CalculerBtn"
                Text="Calculer" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>