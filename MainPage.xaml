<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMaths.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="maths.png"
                HeightRequest="200"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <Label
                Text="Tapez votre expression mathematique"
                FontSize="18"
                HorizontalOptions="Center"
                />
            <Entry 
                
                x:Name="exprEntry"
                WidthRequest="200"
                FontSize="18"
                
                />

            <Label
                Text="votre resultat ? "
                FontSize="18"
                HorizontalOptions="Center"
                />
            <Button
                x:Name="CalclerBtn"
                Text=" Calculer " 
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
